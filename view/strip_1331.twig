] %}


<style>
@keyframes flash{
    0% {opacity: 30%;}
    50% {opacity: 30%;}
    65% {opacity: 100%;}
    68% {opacity: 100%;}
    75% {opacity: 85%;}
    100% {opacity: 30%;}
}
@keyframes flash2{
    0% {opacity: 30%;}
    90% {opacity: 30%;}
    92% {opacity: 100%;}
    93% {opacity: 100%;}
    100% {opacity: 30%;}
}
@keyframes flash3{
    0% {opacity: 30%;}
    99% {opacity: 30%;}
    99.2% {opacity: 100%;}
    100% {opacity: 30%;}
}

#comic img{
    opacity:30%;
    animation-name: flash;
    animation-duration: 1s;
    animation-iteration-count: infinite;
}

{% for row in comics %}{% for blockName,duration in row if duration >= 5 and duration < 100 %}
img#{{blockName}},{% endfor %}{% endfor %}
null{
    animation-name: flash2;
}

{% for row in comics %}{% for blockName,duration in row if duration >= 100 %}
img#{{blockName}},{% endfor %}{% endfor %}
null{
    animation-name: flash3;
}

</style>


<div id="comic">

<table style="text-align:center; margin:0 auto;">
{% for row in comics %}
<tr>
{% for blockName,duration in row %}
<td><img id="{{blockName}}" src="/s/1331/{{blockName}}.png" style="width:120px;animation-duration:{{duration}}s;" alt="{{strip.title}}" title="{{strip.caption}}"></td>
{% endfor %}
</tr>
{% endfor %}
</table>

</div>

{% endblock %}