    {"kiss":5.53, "fire_dept":23, "holeinone":180, "turnsignal1":0.94, "turnsignal2":0.9},
    {"earthquake1":2.43, "earthquake2":24.26, "earthquake3":242.6, "earthquake4":2426, "parliament_toilet":10.06},
    {"flight":0.93, "book_mockingbird":42.05, "cat_mockingbird":1.82, "phoenixshoes":1.08, "phoenix":2.05},
    {"keys":2.43, "amelia":7.79, "dogbite":7.01, "bike":24.93, "eagle":2.69},
