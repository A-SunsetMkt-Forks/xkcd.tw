{% extends "main.twig" %}

{% block content %}
<h1>[{{strip.id}}] {{strip.title}}</h1>
<img src="/strip/{{strip.id}}.jpg" {% if strip.style %}style="{{strip.style}}"{% endif %} alt="{{strip.title}}" title="{{strip.caption}}">

{% if strip.comment %}<p class="comment">{{strip.comment}}</p>{% endif %}

<p style='margin-top:3em'><a href="http://xkcd.com/{{strip.id}}">原文連結</a></p>
{% endblock %}